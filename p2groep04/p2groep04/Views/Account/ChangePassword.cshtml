@using System.Web.Mvc.Html
@model p2groep04.Models.ChangePasswordModel
@{
    ViewBag.Title = "ChangePasswordForm";
    Layout = "~/Views/Shared/_LayoutPlain.cshtml";
}

@section Main
{
    <div id="container-changepassword" class="container">
        <h2>Change Password</h2>
        @using (Html.BeginForm("ChangePassword", "Account", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {role = "form"}))
        {
            @Html.AntiForgeryToken()

            if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count() > 0)
            {
                <div class="alert alert-error">
                    @Html.ValidationSummary(true)
                </div>
            }

            <div class="form-group">
                @Html.LabelFor(m => m.OldPlainPassword)

                @Html.PasswordFor(m => m.OldPlainPassword, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.OldPlainPassword)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.NewPlainPassword)

                @Html.PasswordFor(m => m.NewPlainPassword, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.NewPlainPassword)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmNewPlainPassword)

                @Html.PasswordFor(m => m.ConfirmNewPlainPassword, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.ConfirmNewPlainPassword)
            </div>

            <div class="form-group">
                <input type="submit" value="Change" class="button" />
            </div>
        }
    </div>
}
@section scriptsMain {
    <script>
        $(window).resize(function () {

            $('.absolute-center').css({
                position: 'absolute',
                left: '50%',
                top: '50%',
                'margin-left': -$('#container-changepassword').width() / 2,
                'margin-top': -$('#container-changepassword').height() / 1.2
            });

        });
        // To initially run the function:
        $(window).resize();

        $('.field-validation-error, .alert').each(function () {
            $(this).addClass('animated fadeInDown');
        });
    </script>
}

