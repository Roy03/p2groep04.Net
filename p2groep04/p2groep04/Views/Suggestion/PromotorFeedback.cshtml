@using System.Activities.Statements
@using System.Web.Mvc.Html
@using p2groep04.Helpers
@using p2groep04.Models.Domain
@model p2groep04.Models.Domain.Suggestion

@{
    ViewBag.Title = "Voorstel";
}
<div class="pane">
<h2>Voorstel</h2>
<div id="suggestion-view">
    <p>
        <span>ID: @Html.DisplayFor(model => model.Id)</span>
    </p>
    <p>
        <span>Title: @Html.DisplayFor(model => model.Title)</span>
    </p>
    <p>
        <span>Subject: @Html.DisplayFor(model => model.Subject)</span>
    </p>
</div>


    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <div class="form-group">
            <h2>Feedback</h2>

            @Html.TextAreaFor(model => model.Feedbacks, new { @class = "form-control"})
            @Html.ValidationMessageFor(model => model.Feedbacks)
        </div>
       

        <div class="form-group">
            <input type="submit" name="btnSend" value="Geef feedback" class="button" />
            <input type="submit" name="btnSend" value="Goedkeuren" class="button" />
            <input type="submit" name="btnSend" value="Afwijzen" class="button" />
           
        </div>

    }
</div>


