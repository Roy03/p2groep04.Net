@section scriptsMain {    
    <script>
        $(function () {
            $(".credit-contact-social > li > a").hover(function () {
                var _parent = $(this).parent();
                _parent.addClass('animated pulse');

                _parent.one('webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend', function () {
                    _parent.removeClass('animated pulse');
                });
            })
        });
    </script>    
    
    @RenderSection("scripts", required: false)
} 